#include <stdio.h>
#define SIZE  5


int stack[SIZE];
int top = -1;

void push();
//void pop();
//int getTop();
void display();

int main()
{
    int choice;
    while(1)
    {
        printf("Enter the choice ");
        scanf("%d", &choice);
        switch(choice)
        {
            case 1: push();
                break;
        
            /*case 2: pop();
                    break;
                
            case 3: top = getTop();
                    printf("Top element is %d", top);
                    break;*/
        
            case 4: display();
                    break;
                
            case 5: exit(0);        
        }
    }
    return 0;
}

void push()
{
    int elem;
    if(top == SIZE)
        printf("Attempting for Stack overflow");
    else
    {
        if(top == -1)
            top = 0;
        else
            top++;
        printf("Enter the element to be pushed");
        scanf("%d",&elem);
        stack[top] = elem;    
    }
}

void display()
{
    for(int i = 0; i <= top; i++)
        printf("%d\n", stack[i]);
}
