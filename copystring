#include <stdio.h>
#include <string.h>
int main()
{
    char *s1 = "this a orange juice";
    char *s2 = "orange";
    char *s3;
    char s4[10];
    
    while(*s1 != '\0')
    {
        if(*s1 == 'o')
        {
            while(*s1 != ' ')
            {
                *s3 = *s1;
                printf("%c\n",*s3);
                //strcpy(s3,s1);
                *s3++;
                *s1++;
            }
            //*s3 = '\0';
            //printf("%s\n",s3);
            //printf("%s\n",s2);
        }
        if(!(strcmp(s3,s2)))
        {
            printf("Strings are same"); 
            break;
        } 
        printf("%c\n",*s1);
        *s1++;
    }
    strcpy(s4,s2);
    printf("%s",s4);

    return 0;
}
